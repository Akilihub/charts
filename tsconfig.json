{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES5",
      "declaration": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "lib": ["es2017", "dom"],
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "lib",
      "skipLibCheck": true,
      "removeComments": true
    },
    "exclude": [
      "node_modules",
      "out",
      "lib"
    ],
    "include": [
      "src",
      "pages"
    ]
  }