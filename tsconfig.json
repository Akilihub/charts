{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES5",
      "jsx": "react",
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "lib": ["es2017", "dom"],
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "outDir": "lib",
      "skipLibCheck": true,
      "noUnusedParameters": true,
      "removeComments": true,
    },
    "exclude": [
      "node_modules",
      "dist",
      "lib",
      "out"
    ],
    "include": [
      "./packages/bubble/*",
      "./packages/core/*"
    ]
  }